@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" >
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/Slider/Group 18.png" alt="First slide">
            <a class="btn text-light" style="background-color:black;top: 45%; width:100px; position: absolute;left: 9%; border-radius: 100px;" role="button" asp-area="" asp-controller="Home" asp-action="Index">
                Explore    <i class="fa fa-chevron-right" style="color:white; font-size:10px;"></i>
            </a>
        </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/Slider/Group 19.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/Slider/Group 17.png" alt="Third slide">
                </div>
            </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

