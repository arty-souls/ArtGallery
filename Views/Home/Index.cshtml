
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <!------slide 1-->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/Slider/Group 18 (3).png" alt="First slide">
            <a class="btn nav-link " style="font-size:1.2vw;background-color:black;top: 44%;width:14vw; position: absolute;left: 9%; border-radius: 100px;color:white;" role="button" asp-area="" asp-controller="Home" asp-action="Index">
                Explore <i class="fa fa-chevron-right" style="color:white; font-size:0.8vw;"></i>
            </a>
        </div>
        <!------slide 2-->
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/Slider/Group 19.png" alt="Second slide">
            <a class="btn nav-link " style="font-size:1.2vw;background-color:white;top: 72%;width:14vw;font-weight:500; position: absolute;left: 10%; border-radius: 100px;color:black;" role="button" asp-area="" asp-controller="Home" asp-action="Index">
                Explore <i class="fa fa-chevron-right" style="color:black; font-size:0.8vw;"></i>
            </a>
        </div>
        <!----slide 3-->
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/Slider/Group 17.png" alt="Third slide">
            <a class="btn nav-link " style="font-size:1.2vw;background-color:black;top: 44%;width:14vw; position: absolute;left: 9%; border-radius: 100px;color:white;" role="button" asp-area="" asp-controller="Home" asp-action="Index">
                Explore <i class="fa fa-chevron-right" style="color:white; font-size:0.8vw;"></i>
            </a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" style="width:4%;opacity:1;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" style="width:4%;opacity:1;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
