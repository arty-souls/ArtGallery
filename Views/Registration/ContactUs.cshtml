@model ArtGallery.Models.User
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br>
    <br>
    <h4 class="text-md-center" style="color:black;font-family:'Playfair Display';font-weight:600;font-size:40px">Contact Us</h4>
    <hr style="height:2px;background-color:black;border-radius:100px;margin-top:0.5vw;">
    <br>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Contactus" style="font-family:Raleway;font-weight:600;letter-spacing:1px;font-size:16px;">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="Username" class="control-label"></label>

                    <input asp-for="Username" class="form-control" style="border-radius:100px;border-color:black;border-width:2px;height:40px;" />

                    <span asp-validation-for="Username" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label asp-for="Email" class="control-label"></label>

                    <input asp-for="Email" class="form-control" style="border-radius:100px;border-color:black;border-width:2px;height:40px;" />

                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="form-group">

                    <label asp-for="Message" class="control-label"></label>

                    <input asp-for="Message" class="form-control" style="border-radius:100px;border-color:black;border-width:2px;height:40px;" />

                    <span asp-validation-for="Message" class="text-danger"></span>

                </div>

                <div class="form-group" style="padding-top:10px;">
                    <button type="submit" class="btn" style="background-color:black;color:white;border-radius:100px;width:110px;">Send <i class="fa fa-paper-plane"></i></button>
                    <a class="btn" role="button" asp-controller="Home" asp-action="Index" style="background-color: black; color: white; border-radius: 100px; width: 40px;"><i class="fa fa-home"></i></a>
                </div>
                <b>@ViewBag.message</b>
            </form>
        </div>
        <div class="col-md-6">
            <div>
                <div>
                    <iframe width="477" height="300" src="https://maps.google.com/maps?q=MarutiPuram%20Faizabad%20Road%20Lucknow%20UP%20India&t=&z=17&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                </div>
            </div>
        </div>
    </div>
    <br>
    <h6 class="text-md-center" style="color:black;font-family:'Raleway';font-weight:600;font-size:20px">You can also connect to us through</h6>
    <div class="text-center">
    <a class="btn btn-link"  
       href="#!"
       role="button" style="background-color:black;border-radius:100px;width:40px;height:40px;">
        <i class="fa fa-facebook-f fa-lg" style="color:white;padding-top:8px;"></i>
        </a>
        <!-- Instagram -->
        <a class="btn btn-link"      
           href="#!"
           role="button"style="background-color:black;border-radius:100px;width:40px;height:40px;color:white;">
            <i class="fa fa-instagram fa-lg" style="padding-top:8px;"></i>
        </a>
   </div>
    <br>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
