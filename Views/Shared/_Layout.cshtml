                                </div>

                            </li>

                            <li class="nav-item dropdown" style="padding-right:1%;">

                                <a class="nav-link text-light  dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Collection">Collections</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Collection">Zodiac</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Collection">Traditional Art</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Collection">Illustration</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Collection">All Collections</a>

                                </div>

                            </li>
                            <li class="nav-item mr-auto">
                                <a class="nav-link text-light" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Registration" asp-action="ContactUs">Contact</a>
                            </li>

                            <li class="nav-item">
                                <form class="form-inline" style="max-width:60%;">
                                    <input class="form-control rounded-pill border-0" type="text" placeholder="Search" aria-label="Search" style="height:35px;width:160px;">
                                </form>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SignIn"> <i class="material-icons"> shopping_cart</i></a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SignIn"> <i class="material-icons" >account_circle</i> </a>
                            </li>
                        </ul>
                    </div>                        
                </div>
        </nav>
           
    </header>

    <div class="container" style ="padding-top:4.9vw;">

        <main role="main" >
            @RenderBody()
        </main>
    </div>

