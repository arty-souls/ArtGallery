                    <ul class="list-unstyled">
                        <li>
                            <a style="color:white" asp-controller="Registration" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li>
                            <a style="color:white" href="#!">Ordering and Payment</a>
                        </li>
                        <li>
                            <a asp-controller="Footer" asp-action="Shipping" style="color:white">Shipping</a>
                        </li>
                        <li>
                            <a asp-controller="Footer" asp-action="Return" style="color:white">Return</a>
                        </li>
                        <li>
                            <a asp-controller="Footer" asp-action="Faq" style="color:white">FAQ</a>
                        </li>
                        <li>
                            <a href="#!" style="color:white">Sizing Guide</a>
                        </li>
                    </ul>

                </div>
                <!-- Grid column -->

                <hr class="clearfix w-100 d-md-none">

                <!-- Grid column -->
                <div class="col-md-2 mx-auto">

                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4" style="color:white;">Page Info</h5>

                    <ul class="list-unstyled">
                        <!--<li>
        <a href="#!" style="color:white">Legal & Policies</a>
    </li>-->
