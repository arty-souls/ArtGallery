                        <li>
                            <a style="color:white" asp-controller="Registration" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li>
                            <a style="color:white" href="#!">Ordering and Payment</a>
                        </li>
                        <li>
                            <a href="#!" style="color:white">Shipping</a>
                        </li>
                        <li>
                            <a href="#!" style="color:white">Returns</a>
                        </li>
                        <li>
