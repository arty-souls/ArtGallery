<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtGallery</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <header >
        <div class="fixed-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow navbar-fixed-top" style="background-color: #000000; ">
                <div class="container" style="padding-bottom:4.5px; padding-top:8px;">
                    <a class="navbar-brand nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/Logo/logo.png" style="height:50px; width:50px;"></a>
                    <button class="navbar-toggler bg-white" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" style="font-size: 0.8rem;">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse  collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1" style=" font-family:Raleway; font-weight:500;padding-top:3px;">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index" style="padding-right: 35px;">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Event" style="padding-right: 35px;">Events</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Shop" style="padding-right: 35px;">Shop</a>
                            </li>

                            <li class="nav-item dropdown nav-item" style="padding-right: 35px; ">
                                <a class="nav-link text-light dropdown-toggle " id="dropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Artist">
                                    Artists 
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Home" asp-action="ContactUs">Artist1</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="ContactUs">Artist2</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="ContactUs">Artist3</a>
                                </div>

                            </li>

                            <li class="nav-item dropdown" style="padding-right: 35px;">

                                <a class="nav-link text-light  dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Collection">Collections</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Contact">Collection 1</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Contact">Collection 2</a>
                                </div>

                            </li>
                            <li class="nav-item" style="padding-right: 92px;">
                                <a class="nav-link text-light" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                            </li>

                            <li class="nav-item" style="padding-right: 10px;">
                                <form class="form-inline my-2 my-lg-0 ">
                                    <input class="form-control rounded-pill border-0 " type="text" placeholder="Search" aria-label="Search">
                                </form>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SignIn"> <i class="material-icons"><span class="material-icons-outlined"> shopping_cart</span></i></a>
                            </li>

                            <li class="nav-item " style="padding-left:0px;">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SignIn"> <i class="material-icons">account_circle</i> </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </nav>
</div>
    </header>


    <div class="container" style="margin-top:70px;">
         
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ArtGallery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
