@using Microsoft.AspNetCore.Identity
@using ArtGallery.Areas.Identity.Data

@inject SignInManager<ArtGalleryUser> SignInManager
@inject UserManager<ArtGalleryUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtGallery</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Raleway" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100&display=swap" rel="stylesheet">

</head>
<body style="margin-bottom:0px;">

    <header>

        <nav class="navbar fixed-top navbar-expand-md navbar-toggleable navbar-light " style="background-color: #000000;">
            <div class="container">
                <a class="navbar-brand nav-link text-light" style="margin-right:0px;padding-top:0px;" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/Logo/logo.png" style="height:4vw; width:4vw;"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="border:none;">
                    <i class="material-icons" style="color:white;">menu</i>
                </button>
                <div class="navbar-collapse  collapse d-md-inline-flex justify-content-between show">
                    <ul class="navbar-nav flex-grow-1 " style=" font-family:Raleway; font-weight:500;padding-top:3px;padding-left:15px;">
                        <li class="nav-item " style="padding-right:1%;">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item" style="padding-right:1%;">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>

                        <li class="nav-item dropdown" style="padding-right:1%;">
                            <a class="nav-link text-light dropdown-toggle " id="dropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Artist">
                                Artists
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Home" asp-action="Artist">Reka B S</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Artist">Saumya Gupta</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Artist">Nehal Sakaria</a>
                                <a class="dropdown-item" asp-controller="Artists" asp-action="Desc">All Artists</a>

                            </div>

                        </li>

                        <li class="nav-item dropdown" style="padding-right:1%;">

                            <a class="nav-link text-light  dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Collection">Collections</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Home" asp-action="Collection">Zodiac</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Collection">Traditional Art</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Collection">Illustration</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Collection">All Collections</a>

                            </div>

                        </li>
                        <li class="nav-item mr-auto">
                            <a class="nav-link text-light" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Registration" asp-action="ContactUs">Contact</a>
                        </li>

                        <li class="nav-item">
                            <form class="form-inline" style="max-width:60%;">
                                <input class="form-control rounded-pill border-0" type="text" placeholder="Search" aria-label="Search" style="height:35px;width:160px;">
                            </form>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SignIn"> <i class="material-icons"> shopping_cart</i></a>
                        </li>

                        <li class="nav-item ">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <partial name="_LoginPartial" />

                            }
                            else
                            {
                                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                    <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login"> <i class="material-icons">account_circle</i></a>

                                </div>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container" style="padding-top:5.4vw;">

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer------------------------------------------------------------------------------------------------- -->

