@model ArtGallery.Models.Artwork

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Artwork</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post" asp-controller="Artworks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtworkId" />
            <div class="form-group">
                <label asp-for="ArtworkName" class="control-label"></label>
                <input asp-for="ArtworkName" class="form-control" />
                <span asp-validation-for="ArtworkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtworkDesc" class="control-label"></label>
                <input asp-for="ArtworkDesc" class="form-control" />
                <span asp-validation-for="ArtworkDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistName" class="control-label"></label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistIg" class="control-label"></label>
                <input asp-for="ArtistIg" class="form-control" />
                <span asp-validation-for="ArtistIg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reference" class="control-label"></label>
                <input asp-for="Reference" class="form-control" />
                <span asp-validation-for="Reference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Collection" class="control-label"></label>
                <input asp-for="Collection" class="form-control" />
                <span asp-validation-for="Collection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtworkPicture" class="control-label"></label>
                <div class="custom-file">
                    <input multiple asp-for="ArtworkPicture" accept="image/*" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>

                <span asp-validation-for="ArtworkPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@("~/images/Artwork/"+Model.ImageName)" asp-append-version="true" style="height:150px;width:150px;" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
</script>